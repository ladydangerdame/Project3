      <td><h4><%= link_to (city.name), city_path(city.id) %></h4>
        <small><%= city.games.count %> games</small><br />
        <%= city.location %></td>
      <td class="right"></td>
      <td><%= link_to "Show", city %></td>
      <td><%= link_to "Edit", edit_city_path(city) %></td>
      <td><%= link_to "Destroy", city, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

